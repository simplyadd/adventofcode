{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}"
    },
    {
      "name": "[DEBUG]",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "args": [
        "--log=DEBUG"
      ]
    },
    {
      "name": "[test.txt DEBUG]",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "args": [
        "--file=test.txt",
        "--log=DEBUG"
      ]
    }
  ]
}