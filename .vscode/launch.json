{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}"
    },
    {
      "name": "Python Debugger: [test.txt]",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "args": [
        "test.txt"
      ]
    },
    {
      "name": "Python Debugger: [test.txt, DEBUG]",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "args": [
        "test.txt",
        "DEBUG"
      ]
    }
  ]
}